<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CollectionListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bt_due_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Due List"
                    android:textAllCaps="false"
                    android:background="#D10000"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:id="@+id/due_bottom_bg_collectioList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".05"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_scheduled_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Scheduled"
                    android:textAllCaps="false"
                    android:background="#FFA700"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>


                <LinearLayout
                    android:id="@+id/schedule_bottom_bg_collectioList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".05"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_collected_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Collected"
                    android:textAllCaps="false"
                    android:background="#00890B"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>


                <LinearLayout
                    android:id="@+id/collected_bottom_bg_collectioList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".05"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/customer_list_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</FrameLayout>